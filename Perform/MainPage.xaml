<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Perform.MainPage"
             >

    <ScrollView >
        <ScrollView.Background>
            <!-- StartPoint defaults to (0,0) -->
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="White"
                                        Offset="0.6" />
                <GradientStop Color="#FC0816"
                                        Offset="1.0" />
            </LinearGradientBrush>
        </ScrollView.Background>
        <VerticalStackLayout
            Spacing="20"
            Padding="10,0"
            VerticalOptions="Start">
                  
            <Label x:Name="lblHello"
                Text="Hello, fellow orderpicker!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                TextColor="Black"
                />
            <Label 
                   x:Name="lblEnterLogin" Text="Enter your login"
                   FontSize="18"/>
            <Entry Placeholder="ie. as John Smith enter jsmith"
                   Keyboard="Text"
                   PlaceholderColor="DarkSlateGrey"
                   Completed="Entry_Completed"
                   TextChanged="EntryName_TextChanged"
                   x:Name="entryName"
                   
                   />
            <ActivityIndicator x:Name="loadingUserData" IsVisible="false"
                               HorizontalOptions="Center"/>

           
                <TableView x:Name ="tableView" Intent="Data"
                           >
                <TableSection>
                    <TextCell TextColor="black"/>
                </TableSection>
                    

                </TableView>
            <Button x:Name="btnRefresh" Text="Refresh" Clicked="Button_Clicked"
                    BorderColor="DarkSlateGrey" IsVisible="false"
                    HorizontalOptions="Center"
                    />
            <Image Source="Resources/Splash/splash.svg"
                   VerticalOptions="EndAndExpand"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
               
    </ScrollView>

</ContentPage>
